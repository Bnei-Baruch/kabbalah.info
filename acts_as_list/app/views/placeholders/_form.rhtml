<div id="input_form">
<%= error_messages_for :placeholder %>

<% form_for(:placeholder, :url => path, :html => {:method => method}) do |f| %>

<label for="placeholder_name">Name:</label><%= f.text_field :name, :class => "text"  %>
<label for="placeholder_permitted_assets">Permitted Assets:</label><%= f.text_field :permitted_assets, :class => "text" %>
<div id="submit">
    <%= submit_tag button_text %>
</div>
<% end %>
</div>
